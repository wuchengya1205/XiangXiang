<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_close"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_launcher_round"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="6dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="名字"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textColor="@color/color_black"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:layout_weight="1"
                android:text="签名"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/brightly_grey"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="30dp"
            android:layout_marginLeft="60dp"
            android:padding="3dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_voice_open"
            android:layout_height="30dp"/>

        <TextView
            android:layout_weight="1"
            android:text="声音"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/sw_voice"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:textOn="On"
            android:checked="true"
            android:textOff="Off"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_shake"
            android:layout_width="30dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_shake_open"
            android:layout_height="30dp"/>

        <TextView
            android:layout_weight="1"
            android:text="震动"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/sw_shake"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:checked="true"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
           android:src="@mipmap/icon_now_code"
            android:padding="3dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_weight="1"
            android:text="1.0.0"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_upload"
            android:padding="3dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_weight="1"
            android:text="检查更新"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_irt"
            android:padding="3dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_weight="1"
            android:text="关于"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>
