<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_icon_info"
            android:layout_width="60dp"
            app:civ_border_width="2dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            app:civ_border_color="#FF000000"
            android:src="@mipmap/icon_user_man"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/iv_sex_info"
            android:layout_width="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/icon_sex_man"
            android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/icon_toolbar_back" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_above="@id/tv_money"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:text="用户名:"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/ed_name_info"
                        android:inputType="text"
                        android:maxLength="8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:text="手机号:"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ed_mobile_info"
                        android:inputType="phone"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:text="年龄:"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ed_age_info"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="20dp"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:text="地址:"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/ed_location_info"
                        android:inputType="text"
                        android:maxLines="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:text="生日:"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="6dp"
                        android:id="@+id/tv_birthday_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:text="签名:"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/ed_sign_info"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:text="邮箱:"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/ed_email_info"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>



        </androidx.core.widget.NestedScrollView>



        <Button
            android:id="@+id/btn_change_info"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="修改信息"
            android:textSize="14sp"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:text="余额: 200 $"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textColor="@color/goldenrod"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/btn_change_info"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</LinearLayout>