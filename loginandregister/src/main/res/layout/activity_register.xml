<?xml version="1.0" encoding="utf-8"?>
<com.xiang.lib.base.BaseNetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <View
        android:background="@drawable/qq_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@mipmap/user"
                android:layout_height="80dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="65dp"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="@dimen/dp_50"
                    android:layout_width="wrap_content"
                    android:text="昵称"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:minWidth="@dimen/dp_150"
                    android:layout_marginRight="@dimen/dp_50"
                    android:hint="请输入你的昵称"
                    android:textColorHint="@color/colorWhite80"
                    android:inputType="text"
                    android:textColor="@color/color_238AFF"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="@dimen/dp_50"
                    android:layout_width="wrap_content"
                    android:text="邮箱"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:minWidth="@dimen/dp_150"
                    android:layout_marginRight="@dimen/dp_50"
                    android:hint="请输入你的邮箱"
                    android:textColorHint="@color/colorWhite80"
                    android:inputType="textEmailSubject"
                    android:textColor="@color/color_238AFF"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="@dimen/dp_50"
                    android:layout_width="wrap_content"
                    android:text="地址"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ed_location"
                    android:layout_width="match_parent"
                    android:minWidth="@dimen/dp_150"
                    android:layout_marginRight="@dimen/dp_50"
                    android:hint="请输入你的地址"
                    android:textColorHint="@color/colorWhite80"
                    android:inputType="text"
                    android:textColor="@color/color_238AFF"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="@dimen/dp_50"
                    android:layout_width="wrap_content"
                    android:text="@string/user"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ed_mobile"
                    android:layout_width="match_parent"
                    android:minWidth="@dimen/dp_150"
                    android:layout_marginRight="@dimen/dp_50"
                    android:hint="@string/writeuser"
                    android:maxLength="11"
                    android:textColorHint="@color/colorWhite80"
                    android:inputType="phone|number"
                    android:textColor="@color/color_238AFF"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="@dimen/dp_50"
                    android:layout_width="wrap_content"
                    android:text="密码"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ed_pwd"
                    android:layout_width="match_parent"
                    android:minWidth="@dimen/dp_150"
                    android:layout_marginRight="@dimen/dp_50"
                    android:hint="设置密码"
                    android:textColorHint="@color/colorWhite80"
                    android:inputType="text"
                    android:textColor="@color/color_238AFF"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ll_input"
                android:layout_marginTop="@dimen/dp_40"
                android:text="注册"
                android:textColor="@color/colorWhite"
                android:background="@drawable/shape_white80"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</com.xiang.lib.base.BaseNetLayout>